@model List<Incident>

@{           
    ViewData["Title"] = "Incident by Technician";
}

<div class="container">
    <div class="row">
        <h2>Technician: @ViewBag.Technician </h2>
    </div>
    <div class="row">
        <h2>Assigned/Open Incidents</h2>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Customer ID</th>
                <th>Product ID</th>
                <th>Date Opened</th>
                <th></th>
            </tr>
        </thead>
        @if (Model?.Count > 0)
        {
            @foreach (var incident in Model)
            {
                <tr>
                    <td>@incident.Title</td>
                    <td>@incident.CustomerID</td>
                    <td>@incident.ProductID.ToString()</td>
                    <td>@incident.DateOpened.ToShortDateString()</td>
                    <td>
                        <a asp-controller="Incidents" asp-action="Edit" asp-route-id="@incident.IncidentID">Edit</a>
                    </td>
                    <td><a asp-controller="Incidents" asp-action="Delete" asp-route-id="@incident.IncidentID">Delete</a></td>
                    <td><a asp-controller="Incidents" asp-action="Details" asp-route-id="@incident.IncidentID">Details</a></td>
                    
                </tr>
             }
        }
        else
        {
            <h3>There are no assigned incidents.</h3>
        }

    </table>

    <div class="row">
        <a asp-controller="TechIncident" asp-action="Get">Switch Technician</a>
    </div>

</div>